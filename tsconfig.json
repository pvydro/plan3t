{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "lib",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "target": "es2015",
    "declaration": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "paths": {
        "@/*": ["/src/*"]
    },
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
  // "include": [
  //   "src/**/*.ts",
  //   "src/**/*.tsx",
  //   "src/**/*.vue",
  //   "tests/**/*.ts",
  //   "tests/**/*.tsx"
  // ],
}